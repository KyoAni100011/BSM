<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="474.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bsm.bsm.employee.bookAuthors.AddAuthorController">
    <Label fx:id="fullNameErrorLabel" layoutX="76.0" layoutY="178.0" prefHeight="17.0" prefWidth="307.0"
           styleClass="error-label"/>
    <Label fx:id="introductionErrorLabel" layoutX="76.0" layoutY="372.0" prefHeight="17.0" prefWidth="355.0"
           styleClass="error-label"/>

    <Label layoutX="76.0" layoutY="117.0" styleClass="label-bold" text="Full Name">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Label layoutX="76.0" layoutY="205.0" styleClass="label-bold" text="Introduction">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <TextField fx:id="fullNameField" layoutX="75.0" layoutY="138.0" prefHeight="40.0" prefWidth="450.0"
               promptText="Enter author full name" styleClass="input-field-add"/>
    <TextArea fx:id="introductionTextField" layoutX="75.0" layoutY="225.0" prefHeight="147.0" prefWidth="450.0"
              promptText="Enter author introduction" style="-fx-control-inner-background: #F4F4F4;"
              styleClass="input-field-add" wrapText="true"/>


    <Button layoutX="371.0" layoutY="398.0" mnemonicParsing="false" onAction="#handleSaveChanges" prefHeight="40.0"
            prefWidth="153.0" styleClass="button-custom-employee" text="Save" textFill="WHITE">
        <font>
            <Font size="18.0"/>
        </font>
    </Button>
    <Label layoutX="215.0" layoutY="48.0" text="ADD AUTHOR">
        <font>
            <Font size="25.0"/>
        </font>
    </Label>
</AnchorPane>

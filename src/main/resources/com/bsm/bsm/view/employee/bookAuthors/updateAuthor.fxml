            fx:controller="com.bsm.bsm.author.UpdateAuthorController">
    <children>
        <Label fx:id="fullNameErrorLabel" layoutX="76.0" layoutY="178.0" prefHeight="17.0" prefWidth="307.0"
               styleClass="error-label"/>
        <Label fx:id="introductionErrorLabel" layoutX="76.0" layoutY="266.0" prefHeight="17.0" prefWidth="317.0"
               styleClass="error-label"/>

        <Label layoutX="76.0" layoutY="117.0" styleClass="label-bold" text="Full Name">
